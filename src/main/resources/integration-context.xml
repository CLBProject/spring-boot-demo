	<bean id="ftpSessionFactory"
		class="org.springframework.integration.ftp.session.DefaultFtpSessionFactory">
		<property name="host" value="192.168.99.100" />
		<property name="port" value="21" />
		<property name="username" value="admin" />
		<property name="password" value="admin" />
		<property name="clientMode" value="0"/>
	    <property name="fileType" value="1"/>
	    <property name="bufferSize" value="100000"/>
	</bean>	
		
	<int:channel id="ftpChannel">
	    <int:interceptors>
	        <int:wire-tap channel="logger"/>
	    </int:interceptors>
	</int:channel>

<int:logging-channel-adapter id="logger" level="DEBUG"/>
	

	<int-ftp:inbound-channel-adapter session-factory="ftpSessionFactory" 
		local-directory="src/test/write"
		channel="ftpChannel"
		remote-file-separator="/"
		remote-directory="/">
		<int:poller fixed-rate="5000"></int:poller>
	</int-ftp:inbound-channel-adapter>       
	
